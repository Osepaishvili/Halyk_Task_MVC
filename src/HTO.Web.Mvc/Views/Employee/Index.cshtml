@using HTO.Employee.Dto
@using HTO.EntityFrameworkCore.Entities

@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    თანამშრომლები
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>სახელი</th>
                            <th>გვარი</th>
                            <th>პირადი ნომერი</th>
                            <th>დაბადების თარიღი</th>
                            <th>ეროვნება</th>
                            <th>მოქმედებები</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.Name</td>
                                <td>@employee.SurName</td>
                                <td>@employee.PersonalId</td>
                                <td>@employee.BirthDate</td>
                                <td>@employee.Nationality</td>


                                <td class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li>
                                            <form asp-action="Delete" method="post">
                                                <input type="hidden" value="@employee.Id" name="id" />
                                                <button type="submit" class="waves-effect waves-block delete-user" style=" border: none;
                                                                                                                           width: 100%;
                                                                                                                           line-height: 40px;">

                                                    <i class="material-icons" style="top: 50%;
                                                                                     position: absolute;
                                                                                     left: 18px;
                                                                                     transform: translateY(-50%);">delete_sweep</i> წაშლა
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <a class="waves-effect waves-block edit-user" asp-action="Manage" asp-controller="Employee" asp-route-id="@employee.Id"><i class="material-icons">edit</i>რედაქტირება</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-action="Manage" asp-controller="Employee">
                    <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right">
                        <i class="material-icons">add</i>
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>
